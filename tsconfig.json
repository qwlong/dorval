{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@dorval/core": ["./packages/core/src"],
      "@dorval/dorval": ["./packages/dorval/src"],
      "@dorval/dio": ["./packages/dio/src"],
      "@dorval/custom": ["./packages/custom/src"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}