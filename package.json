{
  "name": "dorval-workspace",
  "version": "0.0.1",
  "description": "Dart code generator for OpenAPI specifications",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.13.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "tsup": "^8.5.0",
    "turbo": "^1.13.3",
    "typescript": "^5.2.2",
    "vitest": "^0.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}